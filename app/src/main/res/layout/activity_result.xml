<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Result">

    <TextView
        android:id="@+id/bearerTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="50dp"
        android:text="Bearer = "
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/transactionBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Transaction : Antar Bank"
        app:layout_constraintEnd_toEndOf="@id/bearerTxt"
        app:layout_constraintStart_toStartOf="@id/bearerTxt"
        app:layout_constraintTop_toBottomOf="@id/bearerTxt" />

    <Button
        android:id="@+id/transactionAntarRekBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Transaction : Antar Rekening"
        app:layout_constraintEnd_toEndOf="@id/bearerTxt"
        app:layout_constraintStart_toStartOf="@id/bearerTxt"
        app:layout_constraintTop_toBottomOf="@id/transactionBtn" />

    <Button
        android:id="@+id/tagihanBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Transaction : Tagihan Internet"
        app:layout_constraintEnd_toEndOf="@id/transactionAntarRekBtn"
        app:layout_constraintStart_toStartOf="@id/transactionAntarRekBtn"
        app:layout_constraintTop_toBottomOf="@id/transactionAntarRekBtn" />

    <Button
        android:id="@+id/mutasiBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Action : Mutasi Rekening"
        app:layout_constraintEnd_toEndOf="@id/transactionBtn"
        app:layout_constraintStart_toStartOf="@id/transactionBtn"
        app:layout_constraintTop_toBottomOf="@id/tagihanBtn" />

    <Button
        android:id="@+id/virtualAccBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Action : Virtual Account"
        app:layout_constraintEnd_toEndOf="@id/transactionBtn"
        app:layout_constraintStart_toStartOf="@id/transactionBtn"
        app:layout_constraintTop_toBottomOf="@id/mutasiBtn" />

    <Button
        android:id="@+id/checkSaldoClickBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Action : Check Saldo"
        app:layout_constraintEnd_toEndOf="@id/transactionBtn"
        app:layout_constraintStart_toStartOf="@id/transactionBtn"
        app:layout_constraintTop_toBottomOf="@id/virtualAccBtn" />

    <Button
        android:id="@+id/clickNotif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Action : Check Notif"
        app:layout_constraintEnd_toEndOf="@id/transactionBtn"
        app:layout_constraintStart_toStartOf="@id/transactionBtn"
        app:layout_constraintTop_toBottomOf="@id/checkSaldoClickBtn" />

    <TextView
        android:id="@+id/validationTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:text="Validation"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clickNotif"
        />

    <TextView
        android:id="@+id/nameActionTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:text="Action Name : "
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/validationTxt"
        />

    <TextView
        android:id="@+id/actionTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:text="Action : "
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameActionTxt"
        />

    <TextView
        android:id="@+id/valResultTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:text="Is Action Valid ? : "
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/actionTxt"
        />

</androidx.constraintlayout.widget.ConstraintLayout>